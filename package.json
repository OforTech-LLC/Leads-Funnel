{
  "name": "leads-funnel",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-funnel lead generation platform",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@leads-funnel/web",
    "build": "npm run build --workspace=@kanjona/shared && npm run build --workspace=@leads-funnel/web",
    "build:shared": "npm run build --workspace=@kanjona/shared",
    "lint": "npm run lint --workspace=@leads-funnel/web",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
