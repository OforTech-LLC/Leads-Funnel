{
  "name": "leads-funnel",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-funnel lead generation platform",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@leads-funnel/web",
    "build": "npm run build --workspace=@kanjona/shared && npm run build --workspace=@leads-funnel/web",
    "build:shared": "npm run build --workspace=@kanjona/shared",
    "lint": "npm run lint --workspace=@leads-funnel/web",
    "lint:fix": "npm run lint --workspace=@leads-funnel/web -- --fix",
    "type-check": "npm run type-check --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "tf:fmt": "cd infra/terraform && terraform fmt -recursive",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "*.tf": [
      "terraform fmt"
    ],
    "*.swift": [
      "swift-format format --in-place"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
