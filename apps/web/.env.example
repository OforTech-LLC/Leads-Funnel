# =============================================================================
# Frontend Environment Variables Template
# =============================================================================
# Copy this to .env.local for local development
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# Analytics (optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_VOICE_AGENT=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CONSENT_BANNER=true

# -----------------------------------------------------------------------------
# Consent & Privacy (GDPR/CCPA)
# -----------------------------------------------------------------------------
# Version strings for consent tracking
NEXT_PUBLIC_PRIVACY_POLICY_VERSION=1.0.0
NEXT_PUBLIC_TERMS_VERSION=1.0.0

# URLs for legal pages
NEXT_PUBLIC_PRIVACY_POLICY_URL=/privacy
NEXT_PUBLIC_TERMS_URL=/terms

# Whether to require consent before form submission
NEXT_PUBLIC_REQUIRE_CONSENT=true

# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_NAME=Kanjona
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_CONTACT_EMAIL=support@kanjona.com

# -----------------------------------------------------------------------------
# Admin Console Configuration (Optional)
# -----------------------------------------------------------------------------
# These are only needed if the admin console is enabled.
# Values come from Terraform outputs after deployment.

# Cognito Configuration
# NEXT_PUBLIC_ADMIN_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
# NEXT_PUBLIC_ADMIN_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
# NEXT_PUBLIC_ADMIN_COGNITO_DOMAIN=https://kanjona-admin-dev.auth.us-east-1.amazoncognito.com

# Admin API Configuration
# NEXT_PUBLIC_ADMIN_API_URL=https://admin-api-dev.kanjona.com

# -----------------------------------------------------------------------------
# Error Tracking (optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Set to true to enable debug logging in browser console
NEXT_PUBLIC_DEBUG=false
