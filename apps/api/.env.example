# =============================================================================
# Environment Variables for Lead Capture API Lambda
# =============================================================================

# AWS Configuration
AWS_REGION=us-east-1

# Environment (dev|prod)
ENV=dev

# DynamoDB Table Name
DDB_TABLE_NAME=kanjona-funnel-dev-main

# EventBridge Bus Name
EVENT_BUS_NAME=default

# Rate Limiting
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW_MIN=10

# Idempotency TTL (hours)
IDEMPOTENCY_TTL_HOURS=24

# IP Hash Salt (optional, but recommended for production)
IP_HASH_SALT=your-secret-salt-here
