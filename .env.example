# =============================================================================
# Kanjona Lead Generation Platform - Environment Variables Template
# =============================================================================
# Copy this to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_account_id

# -----------------------------------------------------------------------------
# Project Configuration
# -----------------------------------------------------------------------------
PROJECT_NAME=kanjona
ENVIRONMENT=dev

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL=https://api-dev.kanjona.com
API_STAGE=dev

# -----------------------------------------------------------------------------
# Twilio Configuration (Voice Agent)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx
TWILIO_API_KEY_SID=your_api_key_sid
TWILIO_API_KEY_SECRET=your_api_key_secret

# -----------------------------------------------------------------------------
# ElevenLabs Configuration (AI Voice)
# -----------------------------------------------------------------------------
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL_ID=eleven_monolingual_v1

# -----------------------------------------------------------------------------
# CloudFront Distribution IDs
# -----------------------------------------------------------------------------
DEV_CLOUDFRONT_DISTRIBUTION_ID=your_dev_distribution_id
PROD_CLOUDFRONT_DISTRIBUTION_ID=your_prod_distribution_id

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_VOICE_AGENT=false
ENABLE_TWILIO=false
ENABLE_ELEVENLABS=false
ENABLE_WAF=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_RATE_LIMITING=true
ENABLE_DEDUPLICATION=true
ENABLE_DEBUG=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
ROOT_DOMAIN=kanjona.com
DEV_DOMAIN=dev.kanjona.com
API_DOMAIN=api.kanjona.com
API_DEV_DOMAIN=api-dev.kanjona.com
